{
  "name": "webpack-template",
  "version": "1.0.0",
  "description": "generic webpack template for html, css and javascript",
  "main": "index.js",
  "scripts": {
    "test": "npm run formatCheck && eslint ./src/",
    "fix": "eslint --fix ./src/",
    "formatCheck": "prettier . --check",
    "formatWrite": "prettier . --write",
    "prebuild": "eslint ./src/",
    "start": "webpack serve --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "deploy": "git checkout gh-pages && git merge main --no-edit && npm run build && git add dist -f && git commit -m \"Deployment commit.\" && git subtree push --prefix dist origin gh-pages && git checkout main"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ignasc/webpack-template.git"
  },
  "keywords": [
    "webpack"
  ],
  "author": "Ignas C",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ignasc/webpack-template/issues"
  },
  "homepage": "https://github.com/ignasc/webpack-template#readme",
  "devDependencies": {
    "@eslint/css": "^0.9.0",
    "@eslint/js": "^9.30.1",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^6.6.0",
    "@stylistic/eslint-plugin": "^5.1.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "html-webpack-plugin": "^5.6.3",
    "prettier": "3.6.2",
    "style-loader": "^4.0.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  }
}
